<%-include('../includes/head.ejs')%>
   <link rel="stylesheet" href="/css/product.css">
   
</head>
<body>
  <%-include('../includes/navigation.ejs')%>
    <div>
        
        <%if(orders.length>0){%>
            <h1>Your Orders</h1>
            <ul class="order_history">
                <%orders.forEach(order=>{%>
                    <li>
                        <h3><%=order.orderDate%></h3>
                        <ul class="order-items">
                            <% order.items.forEach(product => {%>
                                <div class="order-items_list">
                                    <li><%= product.title %><span> Quantity: <%=product.quantity %></span></li>
                                    <a href="product-list/<%=product._id%>" type="hidden" name ="productId" value="<%=product._id%>">
                                    <img class="check-out-thumbnail" src="<%=product.imageUrl%>" alt="product details"></a>
                                    <li>Price: <%=product.price%>/unit</li>
                                    <button class="order-detail_btn"><a href="product-list/<%=product._id%>">Detail</a></button>
                                </div>
                            <%})%>
                        </ul>
                    </li>
                <%})%>
            </ul>
        <%}else{%>
            <h1>No Order Yet!</h1>
        <%}%>
    </div>
    <%-include('../includes/end.ejs')%>