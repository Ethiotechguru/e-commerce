<%-include('../includes/head.ejs')%>
   <link rel="stylesheet" href="/css/shop-product-detail.css">
</head>
<body>
  <%-include('../includes/navigation.ejs')%>
    <main>
      <h2 class="product-title">Product Detail</h2>
      <div class='product-container'>
        <div class='product-item'>
            <h3 class=prod-title><%=prod.title%></h3>
            <hr>

            <p class="product-desc"><%=prod.description%></p>
            <img class="product-image" src="<%=prod.imageUrl%>" alt="<%=prod.title%>">
            <p class="product-price">Price: $<%=prod.price%></p>
            <hr>
            <div class="card-action">
              <form action="/cart" method="POST">
                <%if(isAuthenticated){%>
                <button class="add-toCart-btn">Add To Cart</button>
                <%}%>
                <input type="hidden" name ="productId" value="<%=prod._id%>">
              </form>
            </div>
        </div>
      </div>
    </main>
<%-include('../includes/end.ejs')%>