<%-include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <%-include('../includes/navigation.ejs')%>
    <main class="main">
        <div  class="signUp-form-control">
            <form action="/sign-up" method="POST" novalidate>
                <%if(errorMessage.length>0){%>
                <div class="error_message flash-message"><%=errorMessage%></div>
                <%}%>
                <div class="signUp-input-container">
                    <label for="email">Email</label>
                    <input 
                        class="<%=valErr.find(e => e.param === 'email')? 'invalid':'' %>"
                        placeholder="user name(email)" 
                        id="email" class="form-control__input" 
                        type="email" name="email" 
                        value="<%=oldInput.email%>"
                    >
                    
                </div>
                <div class="signUp-input-container">
                    <label for="password">password</label>
                    <input
                        class="<%=valErr.find(e => e.param === 'password')? 'invalid':'' %>"
                        placeholder="pass word" id="password"
                        class="form-control__input" type="password"
                        name="password" value="<%=oldInput.password%>"
                    >
                </div>
                <div class="signUp-input-container">
                    <label for="confirm-password">Confirm password</label>
                    <input 
                        class="<%=valErr.find(e => e.param === 'confirmPassword')? 'invalid':'' %>"
                        placeholder="confirm pass word" 
                        id="confirm-password" 
                        class="form-control__input" 
                        type="password" 
                        name="confirmPassword" 
                        value="<%=oldInput.confirmPassword%>">
                </div>
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <button class="form-control__btn" type="submit">Sign Up</button>
            </form>
        </div>
    </main>
    <%-include('../includes/end.ejs')%></div>