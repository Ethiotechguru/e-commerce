<%-include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <%-include('../includes/navigation.ejs')%>
    <main class="main">
        <div  class="login-form-control">
            <form action="/reset" method="POST">
                <%if(errorMessage.length>0){%>
                    <div class="error_message flash-message"><%=errorMessage%></div>
                <%}%>
                <div class="login-input-container">
                    <label for="email">Email</label>
                    <input placeholder="user name(email)" id="email" class="form-control__input" type="email" name="email">
                </div>
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <button class="form-control__btn" type="submit">Send Email</button>
            </form>
        </div>
    </main>
    <%-include('../includes/end.ejs')%>