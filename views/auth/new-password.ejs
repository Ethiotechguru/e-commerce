<%-include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <%-include('../includes/navigation.ejs')%>
    <main class="main">
        <div  class="login-form-control">
            <form action="/new-password" method="POST">
                <%if(errorMessage.length>0){%>
                    <div class="error_message flash-message"><%=errorMessage%></div>
                <%}%>
                <div class="signUp-input-container">
                    <label for="password">password</label>
                    <input placeholder="pass word" id="password" class="form-control__input" type="password" name="password">
                </div>
                <div class="signUp-input-container">
                    <label for="confirm-password">Confirm password</label>
                    <input placeholder="confirm pass word" id="confirm-password" class="form-control__input" type="password" name="confirmPassword">
                </div>
                <input type="hidden" name="userId" value="<%=userId%>">
                <input type="hidden" name="passwordToken" value="<%=passwordToken%>">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <button class="form-control__btn" type="submit">Reset Password</button>
            </form>
        </div>
    </main>
    <%-include('../includes/end.ejs')%>