<%-include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%-include('../includes/navigation.ejs')%>
    <main class="main">
        <div  class="form-control">
            <h1>My product</h1>
            <form action="/admin/<%if(editing){%>edit-product<%}else{%>add-product<%}%>" method="POST">
                <div class="input-container">
                    <input placeholder="title" class="form-control__input" type="text" name="title" value="<%if(editing){%><%=product.title %><%}%>">
                </div>
                <div class="input-container">
                    <input placeholder="price" class="form-control__input" type="text" name="price" value="<%if(editing){%><%=product.price %><%}%>">
                </div>
                <div class="input-container">
                    <input placeholder="Image Url" class="form-control__input" type="text" name="imgUrl" value="<%if(editing){%><%=product.imageUrl%><%}%>">
                </div>
                <div class="input-container">
                    <textarea placeholder="description" class="form-control__input" name="description" rows="5"><%if(editing){%><%= product.description %><%}%></textarea>
                </div>
                <%if(editing){%>
                    <input type="hidden" value="<%= product.id %>" name='productId'>  
                <%}%>
                    <button class="form-control__btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
            </form>
        </div>
       
    </main>
<%-include('../includes/end.ejs')%>