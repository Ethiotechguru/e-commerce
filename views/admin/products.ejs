<%-include('../includes/head.ejs')%>
   <link rel="stylesheet" href="/css/admin-products-list.css">
</head>

<body>
  <%-include('../includes/navigation.ejs')%>
    <main>
        <% if(prods.length>0) {%>
            <div class='admin-prods-container'>
                <% for(let product of prods){%>
                 
                    <div class='admin-prod-item'>
                        <hr>
                        <h3 class=admin-prod-title><%=product.title%></h3>
                        <img class="admin-image" src="/<%=product.imageUrl%>" alt="DSLR Camera">
                        <p class="admin-prod-desc"><%=product.description%></p>
                        <p class="admin-prod-price">Price: $<%=product.price%></p>
                        
                          <a href="/admin/edit-product/<%= product._id %>?edit=true" class="admin-prod-edit-btn">Edit</a>
                       
                        <form action="/admin/delete-product" method="POST">
                          <input type="hidden" value="<%= product._id %>" name="productId">
                          <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                          <button class="admin-prod-delete-btn" type="submit">Delete</button>
                      </form>
                        <hr>
                    </div>
                <%}%>
                <h2 class="admin-prods-title"><span>
                    <a href="/admin/add-product">Add More Product</a>
                </span></h2>
            </div>
            
      <% } else{%>  
        <h1>No Product Found</h1>
        <h4>Total Price : 0</h4>
      <%}%>
    </main>
<%-include('../includes/end.ejs')%>